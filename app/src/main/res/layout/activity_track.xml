<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activities.TrackActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:background="#786B5F"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/trackName"
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:fontFamily="sans-serif-thin"
            android:gravity="start|left|center_vertical"
            android:text="TrackName"
            android:textDirection="locale"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/recordOrStopRecordOrPlayBtn"
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#786B5F"
            android:foregroundTint="#FFFFFF"
            app:srcCompat="@drawable/recordbuttonsmall" />

        <ImageButton
            android:id="@+id/deleteTrackBtn"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#786B5F"
            app:srcCompat="@drawable/crocepiccolo" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>